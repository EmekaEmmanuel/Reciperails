<main>

        <section class="food_section1">
            <button class="custom_btn1"><%= link_to "Add Food", new_food_path, class: "td_none" %></button>
        </section>

        <section class="food_section2">
            <table class="styled_table">

                <thead>
                    <tr>
                        <th>Food</th>
                        <th>Measurement unit</th>
                        <th>Unit Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody> 
                <% @foods.each do |food| %>
                    <tr class="active_row custom_row1">
                        <th class="custom_font1"><%= food.name %></th>
                        <th class="custom_font1"><%= food.measurement_unit %></th>
                        <th class="custom_font1">$<%= food.price %></th>
                        <th class="custom_font1 table_flex1">
                            <button class="custom_btn1"><%= link_to "Delete", food_path(food), class:"td_none", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></button> 
                        </th>
                    </tr>
                <% end %>
                </tbody>

            </table>
        </section>
    </main>












